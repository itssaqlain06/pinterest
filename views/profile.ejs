<% include ./partials/header.ejs%>
<div class="profile w-full h-full min-h-screen bg-zinc-800 text-white pt-1">
  <form action="/fileupload" hidden id="uploadform" method="post">
    <input type="file" name="file" />
  </form>
  <div class="profdets flex flex-col items-center mt-20">
    <div class="relative">
      <span
        class="absolute w-8 h-8 bottom-0 right-0 rounded-full flex flex-center justify-center bg-zinc-200 hover:bg-zinc-300"
      >
        <i
          id="uploadicon"
          class="text-zinc-800 cursor-pointer ri-pencil-fill p-1"
        ></i>
      </span>
      <div class="w-32 h-32 bg-zinc-200 rounded-full overflow-hidden">
        <img
          src="https://i.pinimg.com/236x/b1/54/b6/b154b67a17e24e30ea9403d9da9cc732.jpg"
          alt=""
          class="w-full h-full object-cover"
        />
      </div>
    </div>
    <h1 class="text-3xl font-semibold mt-5">Saqlain Mushtaq</h1>
    <h3 class="text-md">@saqi</h3>
    <a
      href="/edit"
      class="mt-3 px-7 py-2 bg-zinc-600 rounded-full text-xs font-semibold hover:bg-zinc-700"
      >Edit</a
    >
    <Button
      class="mt-4 px-7 py-2 bg-red-600 rounded-lg text-xs font-semibold hover:bg-red-800"
      >Add New Post</Button
    >
  </div>
  <div class="cards flex flex-wrap gap-10 m-10">
    <div class="card">
      <div class="w-52 h-40 bg-zinc-200 rounded-lg overflow-hidden">
        <img
          class="w-full h-full object-cover"
          src="https://i.pinimg.com/236x/04/9a/5f/049a5fdd0ebb5c7f225b3202a1724dce.jpg"
          alt=""
        />
      </div>
      <h3 class="text-xl font-semibold mt-3">All Pins</h3>
      <h5 class="text-sm font-medium opacity-90">30 Pins</h5>
    </div>
  </div>
</div>

<script>
  document.querySelector("#uploadicon").addEventListener("click", function () {
    document.querySelector("#uploadform input").click();
    document
      .querySelector("#uploadform input")
      .addEventListener("change", function () {
        document.querySelector("#uploadform").submit();
      });
  });
</script>
