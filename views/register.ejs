<% include ./partials/header.ejs%>
<div
  class="w-full h-screen bg-zinc-300 flex items-center justify-center bg-center bg-cover bg-[url(https://images.unsplash.com/photo-1567359781514-3b964e2b04d6?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8OHx8YWJzdHJhY3R8ZW58MHx8MHx8fDA%3D)]"
>
  <div class="w-[25vw] bg-white px-10 py-10 rounded-[30px]">
    <h1
      class="text-3xl text-center font-semibold text-zinc-700 tracking-tighter capitalize leading-none"
    >
      Create New Account
    </h1>
    <form action="" method="post">
      <input
        type="text"
        class="border-2 rounded-full block mt-4 w-full px-3 py-2"
        placeholder="Username"
        name="username"
      />
      <input
        type="email"
        class="border-2 rounded-full block mt-2 w-full px-3 py-2"
        placeholder="Email"
        name="email"
      />
      <input
        type="number"
        class="border-2 rounded-full block mt-2 w-full px-3 py-2"
        placeholder="Contact"
        name="contact"
      />
      <input
        type="password"
        class="border-2 rounded-full block mt-2 w-full px-3 py-2"
        placeholder="Password"
        name="password"
      />
      <input
        type="submit"
        class="text-white border-2 rounded-full block mt-2 w-full px-3 py-2 bg-red-600 text-white rounded-full"
        value="Create New Account?"
      />
      <p
        class="text-xs font-semibold text-zinc-700 mt-7 w-3/4 mx-auto text-center"
      >
        By continuing, you agree to Pinterest's Terms of Service; Opens a new
        tab and acknowledge you've read our Privacy Policy; Opens a new tab.
        Notice at collection; Opens a new tab.
      </p>
    </form>
    <a
      href="/"
      class="inline-block w-full mt-7 text-sm font-semibold text-zinc-500 text-center"
      >Already a member?</a
    >
  </div>
</div>
<% include ./partials/footer.ejs%>
